#!/usr/bin/env bash

# update package lists and install Nginx if not already installed
sudo apt-get update
sudo apt-get -y install nginx

# Create directory if it doesn't exist
sudo mkdir -p /etc/nginx/html

# Create index.html with "Holberton School" content
sudo bash -c 'echo "Holberton School" > /etc/nginx/html/index.html'

# Create 404.html with "Ceci n'est pas une page" content
sudo bash -c 'echo "Ceci n'\''est pas une page" > /etc/nginx/html/404.html'

# Define the Nginx server block configuration
nginx_conf="\
server {
    listen 80;
    listen [::]:80 default_server;
    root   /etc/nginx/html;
    index  index.html index.htm;

    location /redirect_me {
        return 301 http://youtube.com/;
    }

    error_page 404 /404.html;
    location /404 {
        root /etc/nginx/html;
        internal;
    }
}"

# Write Nginx server block configuration to /etc/nginx/sites-available/default
sudo bash -c "printf '%s' '$nginx_conf' > /etc/nginx/sites-available/default"

# Test Nginx configuration for syntax errors
if sudo nginx -t; then
    sudo systemctl restart nginx
    echo "Nginx has been configured."
else
    echo "Nginx configuration test failed. Please check the configuration."
fi
